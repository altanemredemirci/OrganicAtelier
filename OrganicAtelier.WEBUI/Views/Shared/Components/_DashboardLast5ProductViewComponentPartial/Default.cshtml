@model List<ResultProductDTO>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">En Son Yayınlanan 5 İlan</h1>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <div class="input-group-append">
                            <a href="/Product/Index" class="btn btn-outline-info btn-lg"><b>Tüm Ürünleri Gör</b></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 330px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Ağırlık</th>
                            <th>Türü</th>
                            <th>Aktiflik</th>
                            <th>Fırsat Ürünü Mü?</th>
                            <th>Birim</th>
                            <th>Sitede Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pr in Model)
                        {
                            <tr>
                                <td>@pr.Id</td>
                                <td>@pr.Title</td>
                                <td>@pr.Price</td>
                                <td>@pr.Weight</td>
                                <td>@pr.ProductType.Name</td>
                                <td>@pr.Status</td>
                                <td>@pr.IsPopular</td>
                                <td>@pr.Unit</td>

                                <td><a href="/Home/Product" class="btn btn-outline-info btn-sm">Sitede Gör</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>